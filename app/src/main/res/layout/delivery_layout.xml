<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/delivery_layout_id"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/relativeLayout5"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/txt_expeRIENCIA"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="EXPERIÊNCIA"
            android:textColor="@color/colorPrimary"
            android:textSize="20dp"
            android:layout_marginBottom="13dp" />


        <TextView
            android:id="@+id/nome_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name Here"
            android:textSize="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="29dp" />

        <TextView
            android:id="@+id/nivel_id"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Nivel: "
            android:textColor="@color/color_dark_gray"
            android:textSize="20dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/xp_id"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Xp:"
            android:textSize="20dp"
            android:textColor="@color/color_dark_gray"
            android:layout_alignBaseline="@+id/nivel_id"
            android:layout_alignBottom="@+id/nivel_id"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="17dp"
            android:layout_marginEnd="17dp" />
        <TextView
            android:id="@+id/feedbad_id"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textColor="@color/color_dark_gray"
            android:text="Feedback: "
            android:textSize="20dp"
            android:layout_below="@+id/nivel_id"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/media_id"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textColor="@color/color_dark_gray"
            android:text="Média:"
            android:textSize="20dp"
            android:layout_alignBaseline="@+id/feedbad_id"
            android:layout_alignBottom="@+id/feedbad_id"
            android:layout_alignLeft="@+id/xp_id"
            android:layout_alignStart="@+id/xp_id" />


    </RelativeLayout>


    <RelativeLayout
            android:id="@+id/layoutExpediente"
            android:layout_width="match_parent"
            android:layout_height="150dp"
        android:layout_marginTop="7dp"
        android:layout_below="@+id/relativeLayout5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/txt_expediente"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="EXPEDIENTE"
            android:textColor="@color/colorPrimary"
            android:textSize="20dp"
            android:layout_marginTop="7dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ToggleButton
            android:id="@+id/tgb_isAvailable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOn="Disponivel"
            android:textOff="Descansando"
            android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp"
            android:layout_marginTop="7dp"
            android:layout_below="@+id/txt_expediente"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


    </RelativeLayout>

</RelativeLayout>
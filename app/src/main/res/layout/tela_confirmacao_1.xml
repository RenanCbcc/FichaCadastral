<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/lytConfirmacaoTela1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirmação"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/activity_horizontal_margin"
        android:layout_below="@+id/docFical"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnconfirmarcoleta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirmar coleta" />

    <Button
        android:id="@+id/btnconfirmarentrega"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirmar entrega" />

</LinearLayout>